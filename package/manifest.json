{
  "manifest_version": 3,
  "name": "Send to Home Assistant",
  "version": "2025.09.2",
  "description": "Send the current page URL and title to your Home Assistant webhook.",
  "permissions": ["storage", "scripting", "activeTab", "contextMenus", "notifications"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Send to Home Assistant",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_security_policy": {
    "extension_pages": "default-src 'self'; script-src 'self'; object-src 'none'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' https: http:;"
  },
  "homepage_url": "https://github.com/JOHLC/Send-to-Home-Assistant",
  "short_name": "Send to HA",
  "author": "@JOHLC"
}
